<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:background="#ffffff"
        android:orientation="vertical"
        android:outlineProvider="bounds"
        android:padding="8dp">

        <TextView
            android:id="@+id/eventRow_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:text="Title" />

        <TextView
            android:id="@+id/eventRow_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:text="decription" />

        <TextView
            android:id="@+id/eventRow_creator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:text="Creator" />

        <TextView
            android:id="@+id/eventRow_assignee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:text="Assignee" />

        <TextView
            android:id="@+id/eventRow_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:text="Category" />

        <TextView
            android:id="@+id/eventRow_priority"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:text="Priority" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:background="#ffffff"
        android:orientation="vertical">

        <Button
            android:id="@+id/choreButton_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Event" />

        <Button
            android:id="@+id/choreButton_delete"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:text="Delete Chore" />

    </LinearLayout>
</LinearLayout>
