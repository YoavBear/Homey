<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChoreCreator"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Event's Creator:"
            android:textSize="18sp"
            android:paddingLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

        <TextView
            android:id="@+id/creator_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Creator"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Assignee:"
            android:paddingLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title" />

        <Spinner
            android:id="@+id/assignees_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Category:"
            android:paddingLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title" />

        <Spinner
            android:id="@+id/categories_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Priority:"
            android:paddingLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title" />

        <Spinner
            android:id="@+id/priorities_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_event_title"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title" />

    <EditText
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:lines="2"
        android:minLines="2"
        android:maxLines="10"
        android:textSize="20sp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_event_description"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"/>


    <EditText
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:lines="4"
        android:minLines="2"
        android:maxLines="10"
        android:textSize="20sp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_activity"
        android:visibility="visible"

        />
</LinearLayout>